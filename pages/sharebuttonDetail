<script>
     $(document).ready(function() {
        
        function renderPageData(){
            var pathArray = window.location.pathname.split( '/' );
            var slug = pathArray[pathArray.length-1];
            var promotion_details = getPromotionDetailsBySlug(slug);
            //renderPromotionDetailsTemplate('#promotion_details_template_test','#promo_details_test',promotion_details);
            renderPromotionDetailsTemplate('#promotion_details_template1','#promo-image-web',promotion_details);
            
            var slug = pathArray[pathArray.length-1];
            var promotion_details = getPromotionDetailsBySlug(slug);
            
            promotion_details.current_page = document.URL;
             renderPromotionDetailsTemplate('#promotion_details_template2','#promo-image-phone',promotion_details);
             renderPromotionDetailsTemplate('#promotion_details_template3','#promo-details',promotion_details);
            
          
            if(! promotion_details.store_details){
                promotion_details.store_img = "http://kodekloud.s3.amazonaws.com/sites/5438407c6e6f64462d020000/bc66d880720f58f49b267ae6fb920f74/default.jpg";
            } else {
                promotion_details.store_img = changeStoreImgUrl(promotion_details.store_details);
            }
        
             renderPromotionDetailsTemplate('#store_image','#store_details1',promotion_details);
     
            
        
        }
        
        loadMallData(renderPageData);
    });

</script>