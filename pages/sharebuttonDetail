<script>
    var pathArray = window.location.pathname.split( '/' );
    var slug = pathArray[pathArray.length-1];
    var res = slug.split("-");
    res.shift();
    var titleName = '';
   
   
   res.forEach(function(word) {

           var upperWord = word.charAt(0).toUpperCase() + word.slice(1); //make first character uppercase
       
        titleName += upperWord + ' ';
    });
 document.title = "Halifax Shopping Centre - " + titleName;
 
 </script>
