<button onclick="limitWord();">test!</button>

<script>
        function limitWord(){
            var count = 0;
            var len = 0;
            var text = $('#reason').val();
              console.log(text);
            var words = text.split(" ");
            for(i = 0; i < words.length; i++){
                if(words[i] != ''){
                    count ++;
                }
            }
            if (count < 2){
                console.log('true');
            }else{
                 console.log('true');
            }
        }
</script>