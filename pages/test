<script>
        function limitWord(){
            var count = 0;
            var text = $('#reason').val();
              console.log(text);
            var words = text.split(" ");
              console.log(words);
            for(i = 0; i < words.length; i++){
                if(words[i] != ''){
                    count ++;
                }
            }
              console.log(count);
            if (count < 2){
                console.log('true');
            }else{
                 console.log('false');
            }
        }
</script>